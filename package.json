{
  "name": "use-optimistic-update",
  "version": "0.0.4",
  "description": "Tools to build Optimistic UIs",
  "keywords": [
    "react",
    "optimistic"
  ],
  "repository": "karolis-sh/use-optimistic-update",
  "license": "MIT",
  "author": "Karolis Å arapnickis <pastas.k@gmail.com>",
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "build:es": "tsc --module esnext --outDir lib/es",
    "build:types": "tsc --outFile lib/index.d.ts --declaration --emitDeclarationOnly && sh scripts/types.sh",
    "clean": "rm -rf lib",
    "commit": "npx git-cz",
    "fi": "yarn && yarn link && cd web && yarn",
    "format": "run-p format:*",
    "format:package.json": "sort-package-json package.json",
    "format:prettier": "prettier --write '**/*.*'",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint *.md -i node_modules -i CHANGELOG.md",
    "lint:types": "tsc --noEmit",
    "qa": "run-p lint test",
    "prerelease": "git checkout master && git pull && yarn",
    "release": "run-s clean build qa && standard-version && git push --follow-tags origin master --no-verify && npm publish",
    "start": "yarn build && yarn build:es --watch",
    "tdd": "yarn test --watch",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run qa"
    }
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,html,yml}": [
      "pretty-quick --staged"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "nanoevents": "^5.1.8"
  },
  "devDependencies": {
    "@k.sh/eslint-config": "^1.18.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "markdownlint-cli": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^3.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "sort-package-json": "^1.46.0",
    "standard-version": "^8.0.1",
    "ts-jest": "^26.4.1",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
