{
  "name": "use-optimistic-changes",
  "version": "0.0.0",
  "repository": "git@github.com:karolis-sh/use-optimistic-changes.git",
  "license": "MIT",
  "author": "Karolis Å arapnickis <pastas.k@gmail.com>",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write '**/*.*' && sort-package-json",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint *.md -i node_modules",
    "qa": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run qa"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "pretty-quick --staged"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@k.sh/eslint-config": "^1.14.1",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "markdownlint-cli": "^0.22.0",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^2.0.1",
    "sort-package-json": "^1.41.0"
  }
}
