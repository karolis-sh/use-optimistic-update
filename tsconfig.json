{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "web"]
}
